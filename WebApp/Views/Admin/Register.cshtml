@model WebApp.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Nieuwe gebruiker";
}

<h2 class="page-header">@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-4 control-label"></label>
        <div class="col-md-8">
            <input asp-for="Email" type="email" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="sFirstName" class="col-md-4 control-label"></label>
        <div class="col-md-8">
            <input type="text" asp-for="sFirstName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="sLastName" class="col-md-4 control-label"></label>
        <div class="col-md-8">
            <input type="text" asp-for="sLastName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(model => model.IsMaintenanceContact, htmlAttributes: new { data_toggle = "collapse", data_target = "#collapse_" + Html.IdFor(model => model.IsMaintenanceContact) }) @Html.DisplayNameFor(model => model.IsMaintenanceContact)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group fade collapse @(Model.IsMaintenanceContact ? "in" : "")" id="collapse_@Html.IdFor(model=> model.IsMaintenanceContact)">
        @Html.LabelFor(m => m.MaintenanceContactID, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.DropDownListFor(m => m.MaintenanceContactID, Model.MaintenanceContactList, string.Empty, new { @class = "form-control selectpicker", data_live_search = "true" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <a asp-action="Index" class="btn btn-default">
                <i class="fa fa-arrow-left"></i>
                Vorige
            </a>
        </div>
        <div class="col-md-8">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i>
                Opslaan
            </button>
        </div>
    </div>
}