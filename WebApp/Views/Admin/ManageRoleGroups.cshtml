@model WebApp.ViewModels.AccountRoleGroupViewModel
@{
    ViewBag.Title = "Beheer rolgroepen";
}

<h2 class="page-header">@ViewBag.Title</h2>
<form asp-antiforgery="true">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="SelectedGroups" class="control-label col-md-4"></label>
            <div class="col-md-8">
                <select asp-for="SelectedGroups" asp-items="Model.RoleGroups" class="form-control selectpicker" data-live-search="true"></select>
                <span asp-validation-for="SelectedGroups" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <a href="@Url.Action("Details", new { id = ViewContext.RouteData.Values["id"] })" class="btn btn-default">
                    <i class="fa fa-arrow-left"></i>
                    Vorige
                </a>
            </div>
            <div class="col-md-8">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                    Opslaan
                </button>
            </div>
        </div>
    </div>
</form>