@model IEnumerable<WebApp.ViewModels.AccountListViewModel>

    <div id="userList" class="indexlist" data-pmseteck-target="#userList">
        <table class="table table-hover">
            <thead class="tableheader">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.sFirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.sLastName)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.EmailConfirmed)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr role="button" onclick="location.href='@Url.Action("Details", new { id = item.Id })'">
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.sFirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.sLastName)</td>
                        <td class="text-center">
                            @if (item.EmailConfirmed)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <a href="@Url.Action("SendEmailConfirmation", new { id = item.Id })" class="btn btn-xs btn-warning">
                                    <i class="fa fa-repeat"></i>
                                    Verstuur email
                                </a>
                            }
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>