@model WebApp.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Wachtwoord herstellen";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Project Management Systeem</h2>
<h4>@ViewBag.Title</h4>

<form method="post" asp-action="ResetPassword" class="form-horizontal" role="form">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Code" />
    <div class="form-group">
        <label asp-for="Email" class="sr-only"></label>
        <div class="input-group">
            <div class="input-group-addon">
                <i class="fa fa-fw fa-user"></i>
            </div>
            <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="sr-only"></label>
        <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
            <input asp-for="Password" type="password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password)" />
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="sr-only"></label>
        <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.ConfirmPassword)" />
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary">Resetten</button>
    </div>
</form>