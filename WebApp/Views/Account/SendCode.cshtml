@model WebApp.ViewModels.AccountViewModels.SendCodeViewModel
@{
    ViewBag.Title = "Verstuur code";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6 col-md-offset-3 col-md-4">
        <h2>Project Management Systeem</h2>
        @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post))
        {
            <h4>@ViewBag.Title</h4>
            @Html.AntiForgeryToken()
            @Html.Hidden("rememberMe", @Model.RememberMe)
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.SelectedProvider, htmlAttributes: new { @class = "sr-only" })
                @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "form-control selectpicker", data_live_search = "true" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-block btn-primary">Verstuur code</button>
            </div>
        }
    </div>
</div>

