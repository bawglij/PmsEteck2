
@model WebApp.ViewModels.AccountViewModels.LoginViewModel
@{
    ViewData["Title"] = "Inloggen";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section id="loginForm">
    <h2>Project Management Systeem</h2>
    <form asp-action="Login" asp-controller="Account" method="post" asp-route-returnurl="@ViewBag.ReturnUrl" asp-antiforgery="true">
        <h4>@ViewBag.Title</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="sr-only"></label>
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-fw fa-user"></i>
                </div>
                <input type="text" asp-for="Email" class="form-control" autofocus="autofocus" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="sr-only"></label>
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="RememberMe" /> <label asp-for="RememberMe"></label>
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-primary">Inloggen</button>
        </div>
        <div class="row">
            <p>
                <a asp-controller="Account" asp-action="ForgotPassword">Wachtwoord vergeten</a>
            </p>
        </div>
    </form>
</section>

