@model WebApp.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Wachtwoord vergeten";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Project Management Systeem</h2>
<h4>@ViewBag.Title</h4>

<form method="post" asp-action="ForgotPassword" class="form-horizontal" role="form">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="sr-only"></label>
        <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-fw fa-user"></i></div>
            <input asp-for="Email" class="form-control" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary">Verstuur email</button>
    </div>
</form>