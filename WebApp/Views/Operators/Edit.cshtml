@model WebApp.ViewModels.OperatorEditViewModel

@{
    ViewBag.Title = "Netbeheerder bewerken";
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Operators")">Alle netbeheerders</a></li>
    <li class="active">@Model.sName bewerken</li>
</ol>

<h2 class="page-header">@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="iOperatorID" />
            <div class="form-group">
                <label asp-for="sName" class="control-label col-md-4"></label>
                <input asp-for="sName" class="form-control" />
                <span asp-validation-for="sName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-default pull-right">
                        <span class="fa fa-arrow-left"></span>
                        Terug
                    </a>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-block btn-primary">
                        <span class="fa fa-save"></span>
                        Opslaan
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
